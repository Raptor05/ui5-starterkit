<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns="sap.m">
    <ObjectHeader id="ohProductHeader"
                  responsive="true"
                  icon="{ProductPicUrl}"
                  iconAlt="{Name}"
                  iconActive="true"
                  iconPress="onOpenProductPic"
                  intro="{Description}"
                  title="{Name}"
                  number="{
                            parts: [
                                {path: 'Price'},
                                {path: 'CurrencyCode'}
                            ],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {
                                showMeasure: false
                            }
                          }"
                  numberUnit="{CurrencyCode}"
                  backgroundDesign="Translucent">
        <attributes>
            <ObjectAttribute title="{i18n>ProductId}"
                             text="{ProductID}"/>
            <ObjectAttribute title="{i18n>SupplierName}"
                             text="{SupplierName}"/>
            <ObjectAttribute title="{i18n>Category}"
                             text="{Category}"/>
            <ObjectAttribute title="{i18n>Weight}"
                             text="{
                                        path: 'WeightMeasure',
                                        type: 'sap.ui.model.type.Float',
                                        formatOptions: {
                                            decimals: 1
                                        }
                                    } {= ${WeightUnit}.toLowerCase() }"/>
            <ObjectAttribute title="{i18n>Dimension}"
                             text="{
                                        path: 'Width',
                                        type: 'sap.ui.model.type.Float',
                                        formatOptions: {
                                            decimals: 0
                                        }
                                    } x {
                                        path: 'Depth',
                                        type: 'sap.ui.model.type.Float',
                                        formatOptions: {
                                            decimals: 0
                                        }
                                    } x {
                                        path: 'Height',
                                        type: 'sap.ui.model.type.Float',
                                        formatOptions: {
                                            decimals: 0
                                        }
                                    } {= ${DimUnit}.toLowerCase() }"/>
        </attributes>
        <headerContainer>
            <IconTabBar id="itbProductTabs"
                        class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter id="itfProductContentSalesOrderItems"
                                   text="{i18n>SalesOrderItems}">
                        <content>
                            <core:Fragment id="frgSalesOrderItems"
                                           fragmentName="mhp.ui5StarterKit.demo.view.fragment.SalesOrderItems"
                                           type="XML"/>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter id="itfProductContentSupplierInfo"
                                   text="{i18n>SupplierInfo}"/>
                </items>
            </IconTabBar>
        </headerContainer>
    </ObjectHeader>
</core:FragmentDefinition>

