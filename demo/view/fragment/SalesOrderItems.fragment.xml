<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns="sap.m">
    <Table id="tblSalesOrderTable"
           growing="true"
           items="{
                    path: 'ToSalesOrderLineItems',
                    sorter: {
                        path: 'SalesOrderID',
                        descending: false
                    }
                }">
        <columns>
            <Column>
                <Text text="{i18n>SalesOrderID}"/>
            </Column>
            <Column>
                <Text text="{i18n>ItemPosition}"/>
            </Column>
            <Column>
                <Text text="{i18n>Quantity}"/>
            </Column>
            <Column>
                <Text text="{i18n>GrossAmount}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{ProductID}"
                                      text="{SalesOrderID}"
                                      class="sapMTableContentMargin"/>
                    <Text text="{ItemPosition}"/>
                    <Text text="{Quantity} {= ${QuantityUnit}.toLowerCase()}"/>
                    <ObjectNumber number="{
                                            parts: [
                                                {path: 'GrossAmount'},
                                                {path: 'CurrencyCode'}
                                            ],
                                            type: 'sap.ui.model.type.Currency',
                                            formatOptions: {
                                                showMeasure: false
                                            }
                                        }"
                                  unit="{CurrencyCode}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
