<mvc:View xmlns:mvc="sap.ui.core.mvc"
          controllerName="mhp.ui5StarterKit.demo.controller.Detail"
          xmlns="sap.m">
    <Page id="viewDetail"
          title="{i18n>ProductDetailTitle}"
          navButtonPress="onNavBack"
          showNavButton="true">
        <footer>
            <Bar>
                <contentRight>
                    <Button id="btnProductEdit"
                            text="{i18n>Edit}"
                            press="onProductEditPress"/>
                    <Button id="btnProductSave"
                            text="{i18n>Save}"
                            type="Emphasized"
                            visible="false"
                            press="onProductSavePress"/>
                    <Button id="btnProductCancel"
                            text="{i18n>Cancel}"
                            visible="false"
                            press="onProductCancelPress"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
